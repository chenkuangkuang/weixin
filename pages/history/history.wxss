page{
    height:100%;
}
.hispanel{
    width:100%;
    height: 100%;
    box-shadow: 0 0 10px #aaa;
    background: #fff;
    overflow: scroll;
  }

  .his-title{
      justify-content: center;
  }
  
  .hispanel view{
    width:100%;
    display: flex;
    line-height: 40px;
    /* height: 30px; */
    text-align: center;
  }
  .hispanel .his-header{
    color:#aaa;
    background: #fff;
    position: fixed;
  }
  .hispanel view:nth-of-type(3){
    margin-top:50px;
  }
  .hispanel view:nth-last-child(2){

    margin-bottom: 40px;
  }
  .hispanel text{
    display: inline-block;
    width:33%;
    margin-right:10px;
    text-align: center;
  }
  .hispanel text:nth-of-type(2){
    border-bottom:1px solid #ddd;
  }
  .all-length{
    position: fixed;
    bottom:-210px;
    left:0;
    z-index: 99;
    width:100%;
    height:250px;
    padding-left: 5px;
    background: #00b26a;
    color:#fff;
    opacity: .95;
    transition:all .3s;
  }
  .all-length{
    display: block !important;
  }
  .all-length.active{
    bottom:0;
    transition:all .3s;
  }
  .all-length view:nth-of-type(1){
    height:40px;
  }
  .all-length icon{
    position: absolute;
    right:20px;
    top:12%;
    transform: translateY(-50%)
  }
  canvas{
    width:100%;
    background: #00b26a;
  }
  .hidden{
    visibility: hidden;
  }

  .table-item{
    font-size: 12px;
    line-height: 10px;
  }